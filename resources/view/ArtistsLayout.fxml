                                        <VBox fx:id="trackSetsAreaVBox" prefHeight="200.0" prefWidth="100.0" />
                                    </content>
                                </ScrollPane>
                            </children>
                        </AnchorPane>
                    </center>
                </BorderPane>
            </children>
        </AnchorPane>
    </items>
